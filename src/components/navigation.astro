---
import XomilIcon from "./xomil-icon.astro";
import SearchIcon from "./magnifying-glass.astro";
import GithubIcon from "./github-icon.astro";
import InstagramIcon from "./instagram-icon.astro";
import XIcon from "./x-icon.astro";
---

<nav class="sticky top-0 bg-[#161b22] backdrop-filter backdrop-blur-lg bg-opacity-70">
    <div class="max-w-4xl mx-auto px-4 md:px-6 sm:px-4 xs:px-6 lg:px-0 xl:px-0 sticky">
        <div class="flex justify-between">
            <div class="flex space-x-4">
                <!-- logo -->
                <div>
                    <a href="/" class="flex items-center py-3 text-[#f0f6fc]">
                        <XomilIcon pathfill="#f0f6fc"></XomilIcon>
                        <span class="font-light text-lg">xomil.com</span>
                    </a>
                </div>
                <!-- primary nav -->
                <div class="hidden md:flex flex items-center space-x-1">
                    <a href="/about" class="py-3 px-3 text-[#6e6e73] hover:text-zinc-300">Terms of Use</a>
                    <a href="/macOS" class="py-3 px-3 text-[#6e6e73] hover:text-zinc-300">About</a>
                </div>
            </div>
            <!-- secondary nav -->
            <div class="hidden md:flex flex items-center space-x-1">
                <!-- <a href="/search" class="py-3 px-3 text-[#f0f6fc] hover:text-zinc-300"><SearchIcon></SearchIcon></a> -->
                <a href="https://github.com/davidjaimes" class="py-3 px-3 text-[#f0f6fc] hover:text-zinc-300"><GithubIcon pathfill="#f0f6fc"></GithubIcon></a>
                <a href="https://instagram.com/davidjaimes__" class="py-3 px-3 text-[#f0f6fc] hover:text-zinc-300"><InstagramIcon pathfill="#f0f6fc"></InstagramIcon></a>
                <a href="https://twitter.com/_davidjaimes" class="py-3 px-3 text-[#f0f6fc] hover:text-zinc-300"><XIcon pathfill="#f0f6fc"></XIcon></a>
            </div>
            <!-- mobile button goes here -->
            <div class="md:hidden flex items-center text-[#6e6e73]">
                <button class="mobile-menu-button" aria-label="Menu Button">
                    <svg class="h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 9h16.5m-16.5 6.75h16.5" />
                      </svg>                      
                </button>
            </div>
        </div>
    </div>
    <!-- mobile menu -->
    <div class="mobile-menu hidden md:hidden pb-8 px-24 text-[#6e6e73] text-center">
        <!-- <a href="/search" class="block py-2 px-4 text-md hover:bg-zinc-700 hover:text-gray-300 rounded-[12px]">Search</a> -->
        <a href="/about" class="block py-2 px-4 text-md hover:bg-zinc-700 hover:text-gray-300 rounded-[12px]">About</a>
        <a href="https://github.com/davidjaimes" class="block py-2 px-4 text-md hover:bg-zinc-700 hover:text-gray-300 rounded-[12px]">GitHub</a>
        <a href="https://instagram.com/davidjaimes__" class="block py-2 px-4 text-md hover:bg-zinc-700 hover:text-gray-300 rounded-[12px]">Instagram</a>
        <a href="https://twitter.com/_davidjaimes" class="block py-2 px-4 text-md hover:bg-zinc-700 hover:text-gray-300 rounded-[12px]">Twitter</a>
        <a href="/terms" class="block py-2 px-4 text-md hover:bg-zinc-700 hover:text-gray-300 rounded-[12px]">Terms of Use</a>
    </div>
</nav>

<script>
    // grab everything we need
    const btn = document.querySelector("button.mobile-menu-button");
    const menu = document.querySelector("div.mobile-menu");

    // add event listerners
    btn.addEventListener("click", () => {
        menu.classList.toggle("hidden");
    });
</script>